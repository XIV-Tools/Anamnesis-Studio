<Window
	x:Class="Anamnesis.Windows.FloatingWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:XivToolsWpf="clr-namespace:XivToolsWpf.Controls;assembly=XivToolsWpf"
	xmlns:controls="clr-namespace:Anamnesis.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Anamnesis.Windows"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:sys="clr-namespace:System;assembly=netstandard"
	x:Name="Self"
	MinWidth="128"
	MinHeight="128"
	Activated="OnActivated"
	AllowsTransparency="True"
	Background="Transparent"
	Deactivated="OnDeactivated"
	Loaded="OnWindowLoaded"
	MouseEnter="OnMouseEnter"
	MouseLeave="OnMouseLeave"
	Opacity="0"
	PreviewKeyDown="OnPreviewKeyDown"
	PreviewKeyUp="OnPreviewKeyUp"
	PreviewMouseDown="OnPreviewMouseDown"
	ResizeMode="CanResizeWithGrip"
	SizeToContent="WidthAndHeight"
	TextBlock.FontSize="12"
	TextBlock.Foreground="{DynamicResource ForegroundBrush}"
	WindowStyle="None"
	mc:Ignorable="d">

	<Window.Resources>
		<Storyboard
			x:Key="OpenStoryboard"
			Completed="OnOpenStoryboardCompleted">
			<DoubleAnimation
				Storyboard.TargetName="Self"
				Storyboard.TargetProperty="Opacity"
				From="0"
				To="1"
				Duration="00:00:00.150">
				<DoubleAnimation.EasingFunction>
					<SineEase EasingMode="EaseOut" />
				</DoubleAnimation.EasingFunction>
			</DoubleAnimation>
		</Storyboard>

		<Storyboard
			x:Key="CloseStoryboard"
			Completed="OnCloseStoryboardCompleted">
			<DoubleAnimation
				Storyboard.TargetName="Self"
				Storyboard.TargetProperty="Opacity"
				From="1"
				To="0"
				Duration="00:00:00.2">
				<DoubleAnimation.EasingFunction>
					<SineEase EasingMode="EaseOut" />
				</DoubleAnimation.EasingFunction>
			</DoubleAnimation>
		</Storyboard>

		<Style TargetType="ResizeGrip">
			<Style.Setters>
				<Setter Property="Margin" Value="0,0,6,6" />
				<Setter Property="Opacity" Value="0.5" />
			</Style.Setters>
		</Style>

	</Window.Resources>

	<Grid x:Name="ContentArea">

		<Border
			Margin="6"
			Background="Transparent"
			BorderBrush="{DynamicResource ForegroundBrush}"
			BorderThickness="1"
			CornerRadius="6"
			Opacity="0.5"
			Visibility="{Binding Services.Settings.Current.Opacity, Converter={StaticResource LessThanToVisibility}, ConverterParameter=0.5}" />

		<Grid x:Name="WindowContentArea">

			<Grid
				Margin="6"
				Visibility="{Binding ShowBackground, Converter={StaticResource B2V}}">

				<Border
					Background="{DynamicResource BackgroundBrush}"
					CornerRadius="6"
					Opacity="1">
					<Border.BitmapEffect>
						<DropShadowBitmapEffect ShadowDepth="0" />
					</Border.BitmapEffect>
				</Border>

				<Border
					Background="Transparent"
					BorderBrush="{DynamicResource TrimBrush}"
					BorderThickness="1"
					CornerRadius="6"
					Visibility="{Binding IsActive, Converter={StaticResource B2V}}" />

				<Border
					Background="Transparent"
					BorderBrush="{DynamicResource BackgroundBrush}"
					BorderThickness="1"
					CornerRadius="6"
					Visibility="{Binding IsActive, Converter={StaticResource !B2V}}" />

			</Grid>

			<Grid
				Grid.Row="1"
				Margin="6">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition />
				</Grid.RowDefinitions>

				<Grid
					Grid.Row="0"
					Height="22"
					Margin="0,0,0,3"
					Visibility="{Binding ShowBackground, Converter={StaticResource B2V}}">

					<StackPanel
						Margin="6,0"
						Orientation="Horizontal">

						<XivToolsWpf:IconBlock
							x:Name="TitleIcon"
							Margin="0,0,6,0"
							VerticalAlignment="Center"
							Foreground="{DynamicResource ForegroundLightBrush}" />

						<TextBlock
							x:Name="TitleText"
							VerticalAlignment="Center"
							Foreground="{DynamicResource ForegroundLightBrush}" />
					</StackPanel>

					<Border
						Margin="1,1,1,-1"
						Background="{DynamicResource XivToolsControlBorderBackground}"
						CornerRadius="6,6,0,0"
						MouseDown="OnTitleMouseDown" />


					<StackPanel
						HorizontalAlignment="Right"
						Orientation="Horizontal">

						<Button
							Width="22"
							Height="22"
							Background="Transparent"
							Click="OnTitlebarContextButtonClicked"
							Style="{StaticResource TransparentIconButton}">
							<XivToolsWpf:IconBlock
								Foreground="{DynamicResource ForegroundLightBrush}"
								Icon="List" />
						</Button>

						<Button
							Width="22"
							Height="22"
							Background="Transparent"
							Click="OnTitlebarCloseButtonClicked"
							Style="{StaticResource TransparentIconButton}"
							Visibility="{Binding CanManualyClose, Converter={StaticResource B2V}}">
							<XivToolsWpf:IconBlock
								Foreground="{DynamicResource ForegroundLightBrush}"
								Icon="Times" />
						</Button>

					</StackPanel>

					<Grid.ContextMenu>
						<ContextMenu x:Name="WindowContextMenu">
							<MenuItem
								Header="OverlayWindow_AutoClose"
								IsCheckable="True"
								IsChecked="{Binding AutoClose}"
								Visibility="{Binding CanChangeAutoClose, Converter={StaticResource B2V}}" />

							<MenuItem
								Click="OnPopOutClicked"
								Header="OverlayWindow_PopOut"
								Visibility="{Binding CanPopOut, Converter={StaticResource B2V}}" />

							<MenuItem
								Click="OnPopInClicked"
								Header="OverlayWindow_PopIn"
								Visibility="{Binding CanPopIn, Converter={StaticResource B2V}}" />

						</ContextMenu>
					</Grid.ContextMenu>
				</Grid>

				<ScrollViewer
					x:Name="ScrollArea"
					Grid.Row="1"
					Margin="1"
					HorizontalScrollBarVisibility="Disabled"
					VerticalScrollBarVisibility="Auto">
					<ContentPresenter x:Name="ContentPresenter" />
				</ScrollViewer>

			</Grid>
		</Grid>
	</Grid>
</Window>
