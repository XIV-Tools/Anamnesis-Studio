<local:PanelBase
	x:Class="Anamnesis.Panels.GenericDialogPanel"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Anamnesis.Panels"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="450"
	d:DesignWidth="800"
	CanResize="False"
	mc:Ignorable="d">

	<Grid x:Name="ContentArea">
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<TextBlock
			MaxWidth="450"
			Margin="12"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Text="{Binding Message}"
			TextWrapping="Wrap" />

		<StackPanel
			Grid.Row="1"
			HorizontalAlignment="Left"
			Orientation="Horizontal">
			<Button
				Grid.Column="1"
				MinWidth="75"
				Margin="3"
				Click="OnLeftClick"
				Content="{Binding Left}"
				Visibility="{Binding Left, Converter={StaticResource NotNullToVisibilityConverter}}" />
		</StackPanel>

		<StackPanel
			Grid.Row="1"
			HorizontalAlignment="Right"
			Orientation="Horizontal">
			<Button
				Grid.Column="1"
				MinWidth="75"
				Margin="3"
				Click="OnRightClick"
				Content="{Binding Right}"
				Visibility="{Binding Right, Converter={StaticResource NotNullToVisibilityConverter}}" />
		</StackPanel>
	</Grid>

</local:PanelBase>
