<UserControl
	x:Class="Anamnesis.Actor.Views.CustomizeIconOption"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="clr-namespace:XivToolsWpf.Controls;assembly=XivToolsWpf"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Anamnesis.Actor.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Width="80"
	mc:Ignorable="d">

	<Grid x:Name="ContentArea">

		<ComboBox
			Height="54"
			ItemsSource="{Binding Menu.Options}"
			SelectedItem="{Binding Option}">

			<ComboBox.ItemsPanel>
				<ItemsPanelTemplate>
					<UniformGrid
						Width="450"
						Columns="4" />
				</ItemsPanelTemplate>
			</ComboBox.ItemsPanel>

			<ComboBox.ItemTemplate>
				<DataTemplate>
					<Image
						Margin="0,2"
						Source="{Binding Icon, Converter={StaticResource Img}}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>


		</ComboBox>

	</Grid>
</UserControl>
