<UserControl
	x:Class="Anamnesis.Actor.Views.CustomizeIconOption"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="clr-namespace:XivToolsWpf.Controls;assembly=XivToolsWpf"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Anamnesis.Actor.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Grid x:Name="ContentArea">

		<ToggleButton Style="{StaticResource XivToolsComboBoxButton}">
			<Image
				Width="42"
				Height="42"
				Source="{Binding Option.Icon, Converter={StaticResource Img}}" />
		</ToggleButton>

	</Grid>
</UserControl>
