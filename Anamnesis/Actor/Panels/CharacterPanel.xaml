<local:ActorPanelBase
	x:Class="Anamnesis.Actor.Panels.CharacterPanel"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:XivToolsWpf="clr-namespace:XivToolsWpf.Controls;assembly=XivToolsWpf"
	xmlns:ana="clr-namespace:Anamnesis"
	xmlns:controls="clr-namespace:Anamnesis.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:designer="clr-namespace:XivToolsWpf.Designer;assembly=XivToolsWpf"
	xmlns:local="clr-namespace:Anamnesis.Actor.Panels"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:panels="clr-namespace:Anamnesis.Panels"
	xmlns:views="clr-namespace:Anamnesis.Actor.Views"
	Title="[Naviagation_Actor_Character]"
	MinWidth="300"
	ana:Behaviours.DesignerLocalization="True"
	d:DataContext="{Binding RelativeSource={RelativeSource Self}}"
	designer:DesignModeProperties.Background="LightGray"
	CanResize="True"
	Icon="User"
	mc:Ignorable="d">

	<Grid x:Name="ContentArea">

		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
		</Grid.RowDefinitions>

		<controls:ActorSelector Selection="{Binding Actor}" />

		<TabControl Grid.Row="1">

			<TabItem Header="[Character_Tab_Info]" />

			<TabItem Header="[Character_Tab_Customize]">
				<ScrollViewer ana:Behaviours.SmoothScroll="True">

					<views:CustomizeEditor
						Grid.Row="0"
						Margin="6"
						Actor="{Binding Actor}"
						Visibility="{Binding Actor.Customize, Converter={StaticResource NotNullToVisibilityConverter}}" />

				</ScrollViewer>
			</TabItem>

			<TabItem Header="[Character_Tab_Shaders]">
				<ScrollViewer ana:Behaviours.SmoothScroll="True">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
						</Grid.RowDefinitions>

						<GroupBox
							Grid.Row="0"
							Style="{StaticResource PanelGroupBox}"
							Visibility="{Binding Actor.ModelObject, Converter={StaticResource NotNullToVisibilityConverter}}">
							<GroupBox.Header>
								<XivToolsWpf:Header
									Icon="GraduationCap"
									Text="[Character_Model_Header]" />
							</GroupBox.Header>

							<views:CharacterModelEditor DataContext="{Binding Actor}" />
						</GroupBox>

						<GroupBox
							Grid.Row="1"
							Style="{StaticResource PanelGroupBox}"
							Visibility="{Binding Actor.ModelObject.ExtendedAppearance, Converter={StaticResource NotNullToVisibilityConverter}, FallbackValue=Collapsed}">
							<GroupBox.Header>
								<XivToolsWpf:Header
									Icon="UserCog"
									Text="[Character_ExAppearance_Header]" />
							</GroupBox.Header>

							<views:ExtendedAppearanceEditor DataContext="{Binding Actor.ModelObject.ExtendedAppearance}" />

						</GroupBox>
					</Grid>
				</ScrollViewer>
			</TabItem>
			<TabItem Header="[Character_Tab_Equipment]">
				<views:EquipmentEditor />
			</TabItem>

		</TabControl>



	</Grid>

</local:ActorPanelBase>
