						<local:BoneView Grid.Column="1" Grid.Row="0" BoneName="Neck"/>

						<TextBlock Grid.Column="2" Grid.Row="0" Text="[Pose_Cervical" Style="{DynamicResource Label}" Margin="16, 0, 3, 0"/>
