						<!--<cm3:TextBlock Grid.Column="8" Grid.Row="0" Text="[Pose_OtherAbdomen" Style="{DynamicResource Label}" Margin="16, 0, 3, 0"/>
							<local:BoneView Grid.Column="9" Grid.Row="0" BoneName="Abdomen"/>-->

